{
  "cli": {
    "version": ">= 6.6.1",
    "appVersionSource": "remote"
  },

  "build": {

    "development": {
      "developmentClient": false,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "env": {
          "EXPO_USE_CMAKE": "1"
        }
      },
      "ios": {
        "simulator": false,
         "env": {
          "EXPO_USE_CMAKE": "1"
        }
      },
      "channel": "development"
    },

    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "env": {
          "EXPO_USE_CMAKE": "1"
        }
      },
      "ios": {
        "simulator": false,
        "env": {
          "EXPO_USE_CMAKE": "1"
        }
      },
      "channel": "preview"
    },

    "production": {
      "autoIncrement": true,
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "env": {
          "EXPO_USE_CMAKE": "1"
        }
      },
      "ios": {
        "buildConfiguration": "Release",
        "resourceClass": "m-medium",
        "env": {
          "EXPO_USE_CMAKE": "1"
        }
      },
      "channel": "production"
    }
  },

  "submit": {
    "production": {
      "android": {},
      "ios": {}
    }
  }
}
